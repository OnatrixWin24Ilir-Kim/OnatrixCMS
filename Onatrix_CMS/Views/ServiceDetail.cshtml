@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ServiceDetail>
@{
	Layout = "mainLayout.cshtml";
}

<partial name="Partials/Layout/_PageHeader" model="(IPageHeader)Model" />

<section class="py-16">
	<div class="max-w-7xl mx-auto px-4">
		<div class="flex flex-row gap-8">
			<aside class="hidden lg:flex w-1/4 flex-col gap-4">@await Html.GetBlockListHtmlAsync(Model.ServiceDetailAsides)
			</aside>

			<div class="hidden lg:block w-px bg-gray-200"></div>

			<div class="w-full lg:flex-1 flex flex-col gap-2">
				@if (Model.ServiceDetailBody != null)
				{
					<div class="service-detail-body">
						@Html.Raw(Model.ServiceDetailBody)
					</div>
				}
				

			</div>

		</div>
	</div>
		            
</section>



@* Question Form Section *@
<partial name="Partials/Forms/_QuestionForm" />



@* Contact Person Section *@
<partial name="Partials/Layout/_ContactPerson" />
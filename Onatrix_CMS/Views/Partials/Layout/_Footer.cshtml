@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    var rootContent = Umbraco.ContentAtRoot();
    var siteSettings = rootContent.OfType<SiteSettings>().FirstOrDefault();
}

<footer class="footer py-[4rem]">
    <div class="max-w-7xl mx-auto px-4 text-center text-sm">
        <p class="m-0">
            @siteSettings?.FooterText 
            @if (!string.IsNullOrEmpty(siteSettings?.FooterLinkUrl))
            {
                <a href="@siteSettings.FooterLinkUrl" target="_blank" class="footer-link hover:underline">@siteSettings?.FooterLinkText</a>
            }
        </p>
    </div>
</footer>

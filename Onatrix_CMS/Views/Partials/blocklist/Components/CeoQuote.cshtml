@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>

@{
    var content = (CeoQuote)Model.Content;
    var quoteText = content.QuoteText ?? "";
    var ceoImage = content.CeoImage?.Url() ?? "";
    var ceoName = content.CeoName ?? "";
    var bodyContent = content.BodyContent?.ToString() ?? "";
}

<section class="ceo-quote-section">
    <div class="ceo-quote-container">
        <div class="ceo-quote-wrapper">
            
            <!-- CEO Image - Smaller, Left Side -->
            <div class="ceo-image-column">
                @if (!string.IsNullOrEmpty(ceoImage))
                {
                    <img src="@ceoImage" 
                         alt="@ceoName" 
                         class="ceo-image" />
                    
                    @if (!string.IsNullOrEmpty(ceoName))
                    {
                        <p class="ceo-name">@ceoName</p>
                    }
                }
            </div>

            <!-- Quote and Body Content - Takes More Space -->
            <div class="ceo-content-column">
                @if (!string.IsNullOrEmpty(quoteText))
                {
                    <blockquote class="ceo-quote">
                        <p class="ceo-quote-text">
                            "@quoteText"
                        </p>
                    </blockquote>
                }

                @if (!string.IsNullOrEmpty(bodyContent))
                {
                    <div class="ceo-body-content">
                        @Html.Raw(bodyContent)
                    </div>
                }
            </div>
        </div>
    </div>
</section>